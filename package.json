{
  "name": "spotify-cli",
  "version": "1.0.0",
  "description": "A beautiful CLI for Spotify with a Claude Code-inspired interface",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "spotify": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.tsx",
    "build": "tsup src/index.tsx --format esm --dts",
    "start": "node dist/index.js",
    "auth": "tsx src/auth/server.ts"
  },
  "keywords": [
    "spotify",
    "cli",
    "music",
    "terminal"
  ],
  "author": "Lautaro",
  "license": "MIT",
  "dependencies": {
    "ink": "^5.0.1",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "ink-select-input": "^6.0.0",
    "ink-gradient": "^3.0.0",
    "ink-big-text": "^2.0.0",
    "react": "^18.3.1",
    "spotify-web-api-node": "^5.0.2",
    "keytar": "^7.9.0",
    "commander": "^12.1.0",
    "open": "^10.1.0",
    "express": "^4.21.0",
    "chalk": "^5.3.0",
    "figures": "^6.1.0",
    "cli-cursor": "^5.0.0",
    "update-notifier": "^7.3.1",
    "conf": "^13.0.1",
    "ora": "^8.1.0",
    "boxen": "^8.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/spotify-web-api-node": "^5.0.11",
    "@types/express": "^5.0.0",
    "@types/node": "^22.9.0",
    "tsx": "^4.19.2",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
